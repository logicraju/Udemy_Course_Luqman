<?xml version = "1.0"?>
<robot name = "custom_bot">
    
    <!--CHASSIS-->
    <link name = "base_link">
        <visual>
            <geometry>
                <box size = "0.5 0.3 0.1"/>
            </geometry>
            <material name = "chassis">
                <!--color rgba = "1 0 0 1"/-->
            </material>
        </visual>
        <collision>
            <geometry>
                <box size = "0.5 0.3 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value = "2"/>
            <inertia ixx = "0.005" ixy = "0.005" ixz = "0.005" iyy = "0.01" iyz = "0.01" izz = "0.01"/> 
        </inertial>
    </link>

    <!--CASTER WHEEL-->
    <link name = "caster_wheel">
        <visual>
            <geometry>
                <sphere radius = "0.05"/>
            </geometry>
            <material name = "caster">
                <ambient>0 0 1 1</ambient>
                <diffuse>0 0 0 1</diffuse>
                <!--color rgba = "0 0 1 1"/-->
            </material>
        </visual>
        <collision>
            <geometry>
                <sphere radius = "0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value = "0.1"/>
            <inertia ixx = "0.005" ixy = "0.005" ixz = "0.005" iyy = "0.01" iyz = "0.01" izz = "0.01"/> 
        </inertial>
    </link>
    <joint name = "caster_joint" type = "continuous">
        <axis xyz = "1 1 1"/>
        <parent link = "base_link"/>
        <child link = "caster_wheel"/>
        <origin xyz = "0.2 0 -0.025" rpy = "1.57 0 0"/>
    </joint>

    <!--LEFT WHEEL-->
    <link name = "left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.075" length="0.025"/>
            </geometry>
            <material name = "left_wheel">
                <ambient>0 1 0 1</ambient>
                <diffuse>0 0 0 1</diffuse>
                <!--color rgba = "0 1 0 1"/-->
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.075" length="0.025"/>
            </geometry>
        </collision>
        <inertial>
            <mass value = "1"/>
            <inertia ixx = "0.005" ixy = "0.005" ixz = "0.005" iyy = "0.01" iyz = "0.01" izz = "0.01"/> 
        </inertial>
    </link>
    <joint name = "left_wheel_joint" type = "continuous">
        <axis xyz = "0 0 1"/>
        <parent link = "base_link"/>
        <child link = "left_wheel"/>
        <origin xyz = "-0.2 -0.1624 0" rpy = "1.5707 0 0"/>
    </joint>

    <!--RIGHT WHEEL-->
    <link name = "right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.075" length="0.025"/>
            </geometry>
            <material name = "right_wheel">
                <ambient>0 1 0 1</ambient>
                <diffuse>0 0 0 1</diffuse>
                <!--color rgba = "0 1 0 1"/-->
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.075" length="0.025"/>
            </geometry>
        </collision>
        <inertial>
            <mass value = "1"/>
            <inertia ixx = "0.005" ixy = "0.005" ixz = "0.005" iyy = "0.01" iyz = "0.01" izz = "0.01"/> 
        </inertial>
    </link>
    <joint name = "right_wheel_joint" type = "continuous">
        <axis xyz = "0 0 1"/>
        <parent link = "base_link"/>
        <child link = "right_wheel"/>
        <origin xyz = "-0.2 0.1624 0" rpy = "-1.5707 0 0"/>
    </joint>

    <!--GAZEBO COLOURS-->
    <gazebo reference = "base_link">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference = "caster_wheel">
        <material>Gazebo/Green</material>
    </gazebo>

    <gazebo reference = "left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference = "right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!--DIFFERENTIAL DRIVE CONTROLLER PLUGIN-->
    <gazebo>
        <plugin name = "differential_drive_controller" filename = "libgazebo_ros_diff_drive.so">
            <legacyMode>false</legacyMode>
            <leftJoint> left_wheel_joint </leftJoint>
            <rightJoint> right_wheel_joint </rightJoint>
            <robotBaseFrame> base_link </robotBaseFrame>
            <wheelSeperation> 0.3248 </wheelSeperation>
            <wheelDiameter> 0.15 </wheelDiameter>
            <publishWheelJointState> true </publishWheelJointState>
        </plugin>
    </gazebo>
</robot>
